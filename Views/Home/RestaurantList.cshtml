@{
    ViewBag.Title = "Top 5 Restaurants in Provo, Utah";
}

@model IEnumerable<string>

<!DOCTYPE html>
<html>
<head>
    <title>Top 5 Provo Restaurants</title>
    <meta name="viewport" content="width=device-width" />

</head>

<body>
    <header>
        <h4 class="bg-primary text-white text-center">These are greatest restaurants of all time (in Provo, UT)</h4>
    </header>
    
    <div class="list-group">
        <ul>
            @foreach (string r in Model)
            {
                <li class="list-group-item">@r</li>
            }
        </ul>
    </div>

</body>

</html>
